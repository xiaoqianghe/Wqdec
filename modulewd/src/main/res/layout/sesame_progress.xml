<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_ca"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_ca_d" />

        <View
            android:id="@+id/line_ca_r"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignTop="@+id/iv_ca"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/iv_ca"
            android:background="@color/click_n_color" />

        <TextView
            android:id="@+id/tv_ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ca"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="芝麻认证"
            android:textColor="@color/tv6"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/line_score_l"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignTop="@+id/iv_score"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/iv_score"
            android:background="@color/click_n_color" />

        <ImageView
            android:id="@+id/iv_score"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_ca_d" />

        <View
            android:id="@+id/line_score_r"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignTop="@+id/iv_score"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/iv_score"
            android:background="@color/click_n_color" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_score"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="芝麻信用评分"
            android:textColor="@color/tv9"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/line_card_l"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignTop="@+id/iv_card"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/iv_card"
            android:background="@color/click_n_color" />

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_ca_d" />

        <View
            android:id="@+id/line_card_r"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignTop="@+id/iv_card"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/iv_card"
            android:background="@color/click_n_color" />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="绑定信用卡"
            android:textColor="@color/tv9"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_ca_d" />

        <View
            android:id="@+id/line_vip_l"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignTop="@+id/iv_vip"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/iv_vip"
            android:background="@color/click_n_color" />

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_vip"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="开通会员"
            android:textColor="@color/tv9"
            android:textSize="14sp" />


    </RelativeLayout>


</LinearLayout>
