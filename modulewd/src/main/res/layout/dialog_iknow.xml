<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_white_round_corner_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/DialogTitleStyle"
        android:text="温馨提示" />

    <include layout="@layout/line_base" />

    <TextView
        android:id="@+id/message"
        style="@style/DialogContentStyle"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />


    <com.allen.library.SuperButton
        android:id="@+id/btn_do"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="16dp"
        android:text="我要借钱"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide"
        app:sCornersRadius="3dp"
        app:sSelectorNormalColor="@color/base_color"
        app:sSelectorPressedColor="@color/click_color"
        app:sUseSelector="true" />

</LinearLayout>